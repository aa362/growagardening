local Players = game:GetService("Players")
local player = Players.LocalPlayer
local playerGui = player:WaitForChild("PlayerGui")

local screenGui = Instance.new("ScreenGui")
screenGui.Name = "HalvanUI"
screenGui.ResetOnSpawn = false
screenGui.Parent = playerGui

-- メインフレーム（左上に寄せる）
local frame = Instance.new("Frame")
frame.Size = UDim2.new(0.25, 0, 0.25, 0)       -- 画面の1/4サイズ
frame.Position = UDim2.new(0.02, 0, 0.02, 0)   -- 左上に小さな余白
frame.BackgroundColor3 = Color3.fromRGB(25, 25, 25)
frame.BorderSizePixel = 0
frame.Active = true
frame.Draggable = true
frame.Parent = screenGui

-- タイトル
local title = Instance.new("TextLabel")
title.Size = UDim2.new(1, 0, 0.15, 0)
title.Position = UDim2.new(0, 0, 0, 0)
title.BackgroundTransparency = 1
title.Text = "halvan script"
title.TextColor3 = Color3.fromRGB(200, 200, 200)
title.TextScaled = true
title.Font = Enum.Font.Gotham
title.Parent = frame

-- スイッチ作成関数
local function createSwitch(name, posY)
	local holder = Instance.new("Frame")
	holder.Size = UDim2.new(0.8, 0, 0.25, 0)
	holder.Position = UDim2.new(0.1, 0, posY, 0)
	holder.BackgroundTransparency = 1
	holder.Parent = frame

	local label = Instance.new("TextLabel")
	label.Size = UDim2.new(0.6, 0, 1, 0)
	label.BackgroundTransparency = 1
	label.Text = name
	label.TextColor3 = Color3.fromRGB(255, 255, 255)
	label.TextScaled = true
	label.Font = Enum.Font.Gotham
	label.Parent = holder

	local switch = Instance.new("Frame")
	switch.Size = UDim2.new(0.3, 0, 0.6, 0)
	switch.Position = UDim2.new(0.65, 0, 0.2, 0)
	switch.BackgroundColor3 = Color3.fromRGB(60, 60, 60)
	switch.BorderSizePixel = 0
	switch.Parent = holder

	local knob = Instance.new("Frame")
	knob.Size = UDim2.new(0.5, 0, 1, 0)
	knob.Position = UDim2.new(0, 0, 0, 0)
	knob.BackgroundColor3 = Color3.fromRGB(200, 200, 200)
	knob.BorderSizePixel = 0
	knob.Parent = switch

	local uiCorner1 = Instance.new("UICorner")
	uiCorner1.CornerRadius = UDim.new(0, 20)
	uiCorner1.Parent = switch

	local uiCorner2 = Instance.new("UICorner")
	uiCorner2.CornerRadius = UDim.new(0, 20)
	uiCorner2.Parent = knob

	local on = false
	switch.InputBegan:Connect(function(input)
		if input.UserInputType == Enum.UserInputType.MouseButton1 or input.UserInputType == Enum.UserInputType.Touch then
			on = not on
			if on then
				knob:TweenPosition(UDim2.new(0.5, 0, 0, 0), "Out", "Sine", 0.2, true)
				switch.BackgroundColor3 = Color3.fromRGB(0, 200, 0)
			else
				knob:TweenPosition(UDim2.new(0, 0, 0, 0), "Out", "Sine", 0.2, true)
				switch.BackgroundColor3 = Color3.fromRGB(60, 60, 60)
			end
		end
	end)
end

-- スイッチを追加
createSwitch("Trade Freeze", 0.25)
createSwitch("Force Accept", 0.55)
