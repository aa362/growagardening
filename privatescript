local Players = game:GetService("Players")
local StarterGui = game:GetService("StarterGui")
local player = Players.LocalPlayer

-- 対象モデル名（例: Raccoon）
local modelName = "Raccoon"
local targetModel = workspace:FindFirstChild(modelName)

if not targetModel then
    StarterGui:SetCore("ChatMakeSystemMessage", {
        Text = "❌ モデル '" .. modelName .. "' が workspace に見つかりません。",
        Color = Color3.fromRGB(255, 100, 100),
        Font = Enum.Font.SourceSansBold,
        FontSize = Enum.FontSize.Size24,
    })
    return
end

-- メッシュ情報を左上チャットに表示
for _, obj in ipairs(targetModel:GetDescendants()) do
    if obj:IsA("MeshPart") then
        StarterGui:SetCore("ChatMakeSystemMessage", {
            Text = "📦 MeshPart: " .. obj.Name ..
                   "\n  MeshId: " .. (obj.MeshId or "なし") ..
                   "\n  TextureId: " .. (obj.TextureID or "なし"),
            Color = Color3.fromRGB(0, 255, 150),
            Font = Enum.Font.SourceSansBold,
            FontSize = Enum.FontSize.Size24,
        })

    elseif obj:IsA("SpecialMesh") then
        StarterGui:SetCore("ChatMakeSystemMessage", {
            Text = "🔩 SpecialMesh: " .. obj.Name ..
                   "\n  MeshId: " .. (obj.MeshId or "なし") ..
                   "\n  TextureId: " .. (obj.TextureId or "なし"),
            Color = Color3.fromRGB(100, 200, 255),
            Font = Enum.Font.SourceSansBold,
            FontSize = Enum.FontSize.Size24,
        })
    end
end

