local Players = game:GetService("Players")
local Workspace = game:GetService("Workspace")
local ChatService = game:GetService("Chat")

local player = Players.LocalPlayer
local targetName = "Raccoon"

-- モデルが追加されたときに通知する関数
local function onDescendantAdded(obj)
	if obj:IsA("Model") and obj.Name == targetName then
		task.wait(0.5) -- 少し待つことで配置が安定する
		local parentName = obj:GetFullName()

		-- キャラクターがいて頭があるならチャット表示
		if player.Character and player.Character:FindFirstChild("Head") then
			ChatService:Chat(player.Character.Head, "Raccoon 発見: " .. parentName, Enum.ChatColor.Blue)
		end
	end
end

-- 既存のものもチェック
for _, obj in ipairs(Workspace:GetDescendants()) do
	onDescendantAdded(obj)
end

-- 新しく追加されたものを監視
Workspace.DescendantAdded:Connect(onDescendantAdded)
