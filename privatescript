local Players = game:GetService("Players")
local StarterGui = game:GetService("StarterGui")

local player = Players.LocalPlayer

-- システムチャットに表示する関数
local function printToChat(message)
	StarterGui:SetCore("ChatMakeSystemMessage", {
		Text = message,
		Color = Color3.fromRGB(0, 255, 0),
		Font = Enum.Font.SourceSansBold,
		TextSize = 18
	})
end

-- Raccoonのパーツをスキャンして情報を出力
local function ScanForRaccoon()
	for _, model in ipairs(workspace:GetDescendants()) do
		if model:IsA("Model") and model.Name == "Raccoon" then
			printToChat("✅ Raccoonモデルを検出しました。構成パーツ：")
			for _, part in ipairs(model:GetDescendants()) do
				if part:IsA("BasePart") then
					local info = string.format(
						"・%s | サイズ: %s | 色: %s | 形状: %s",
						part.Name,
						tostring(part.Size),
						tostring(part.Color),
						part.Shape and part.Shape.Name or "不明"
					)
					printToChat(info)
					wait(0.1)
				end
			end
			return
		end
	end

	printToChat("❌ Raccoonモデルが見つかりませんでした。")
end

-- 少し待ってからスキャン実行
task.delay(3, ScanForRaccoon)
