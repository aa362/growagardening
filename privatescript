local Players = game:GetService("Players")
local Workspace = game:GetService("Workspace")
local ChatService = game:GetService("Chat")

local player = Players.LocalPlayer
local targetName = "Raccoon"

-- モデルが登場したときに通知する関数
local function onModelAdded(obj)
	if obj:IsA("Model") and obj.Name == targetName then
		wait(0.5) -- 読み込み待ち
		local parentName = obj.Parent and obj.Parent:GetFullName() or "不明な場所"

		-- チャットで通知（キャラの頭上に出る）
		if player.Character and player.Character:FindFirstChild("Head") then
			ChatService:Chat(player.Character.Head, "Raccoon モデルを発見: " .. parentName, Enum.ChatColor.Blue)
		end
	end
end

-- Workspace内の既存モデルも確認
for _, obj in pairs(Workspace:GetChildren()) do
	onModelAdded(obj)
end

-- 新規に追加されたモデルを監視
Workspace.ChildAdded:Connect(onModelAdded)
